{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsPaperDiscordApplication",
  "name": "Paper Discord Application Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the name of the Application?"
    },
    "author": {
      "type": "string",
      "description": "PaperDiscord Application Author",
      "default": ""
    },
    "description": {
      "type": "string",
      "description": "PaperDiscord Application Description",
      "default": ""
    },
    "directory": {
      "type": "string",
      "description": "PaperDiscord Application Destination Directory",
      "default": ""
    },
    "token": {
      "type": "string",
      "description": "The Token of the Bot",
      "default": "YourTokenHere"
    }
  },
  "required": ["name"]
}
